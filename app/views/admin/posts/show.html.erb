<div class="container">
  <div class="row">
    <div class="col-lg-4 my-3">
      <h2 class="mb-4">Post detail <span><i class="far fa-image"></i></span></h2>
      <div class="container border bg-white mb-5 py-3">
        <%= image_tag @post.user.get_image, class: 'post_user_image' %>
        <p><%= @post.user.name %></p>
        <div class="post_image_wrapper">
          <%= image_tag @post.get_image, class: 'img-fluid post_image' %>
        </div>
        <h5><%= @post.title %></h5>
        <p><%= @post.content %></p>
        作成日時：<%= l @post.created_at %><br />
        更新日時：<%= l @post.updated_at %>
      </div>

    </div>
    <div class="col-lg-7 offset-lg-1 mt-3 mb-5">
      <h2 class="mb-4">To comment <span><i class="far fa-comment-alt fa-xs"></i></span></h2>
      <div id="users_comments_area">
        <%= render 'admin/comments/comments', comments: @comments %>
      </div>
    </div>
  </div>
</div>