<div class="container">
  <div class="row">
    <div class="col-4 my-3">
      <h2 class="mb-4">Post detail <span><i class="fas fa-camera fa-xs"></i></span></h2>
      <div class="container border mb-5 py-3">
        <%= image_tag @post.user.get_image, class: 'post_user_image' %>
        <%= link_to @post.user.name, admin_user_path(@post.user) %>
        <%= link_to  admin_user_post_path(@post.user, @post) do %>
          <%= image_tag @post.get_image, class: 'img-fluid post_image' %>
        <% end %>
        <h5><%= link_to @post.title, post_path(@post) %></h5>
        <!--#タグのリンクが設定できていないため一旦コメントアウト-->
        <%#= render_with_tags(@post.content) %>
        Created　<%= l @post.created_at %><br />
        Updated　<%= l @post.updated_at %>
      </div>
    </div>
    <div class="col-5 offset-1 mt-3 mb-5">
      <h2 class="mb-4">To comment <span><i class="far fa-comment-alt fa-xs"></i></span></h2>
      <div id="comments_area">
        <% if @comments.present? %>
          <% @comments.each do |comment| %>
            <%= image_tag comment.user.get_image, class: 'user_image' %>
            <%= comment.post.user.name %>
            <p><%= comment.comment %></p>
            <%= link_to '削除', admin_user_comment_path(@post.user, comment), method: :delete, data: {confirm: "本当に削除しますか？"} %>
            <br />
          <% end %>
        <% else %>
            <p>現在、コメントはありません。</p>
        <% end %>
      </div>
    </div>
  </div>
</div>