<div class="container py-3 px-5">
  <div class="row d-flex justify-content-center">
    <div class="col-lg-5 mx-3 p-5 form-group border bg-white shadow">
      <h4 class="text-center"><i class="fas fa-cog"></i> 管理者ログイン</h4>
      <%= form_with model: resource, url: admin_session_path do |f| %>
        <div class="field mt-4">
          <i class="fas fa-envelope"></i> <%= f.label :email, "メールアドレス" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレスを入力", class: "form-control admin-login-form-text shadow-sm" %>
        </div>

        <div class="field mt-3">
          <i class="fas fa-lock"></i> <%= f.label :password, "パスワード" %>
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワードを入力", class: "form-control admin-login-form-text shadow-sm" %>
        </div>

        <div class="actions">
          <%= f.submit "ログイン", class: "form-control mt-4 btn btn-outline-info shadow-sm" %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row d-flex justify-content-center text-center">
    <div class="col-lg-5 form-group border bg-white shadow mx-3 py-3">
      <p class="mt-3 text-secondary small">管理者は<br />ユーザー情報の編集を行えます。</p>
    </div>
  </div>
</div>