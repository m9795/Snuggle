<% if current_page?(edit_admin_shop_tag_path) %>
  <%= form_with model: @shop_tag, url: admin_shop_tag_path(@shop_tag), method: :patch do |f| %>
<% else %?
<%= form_with model: @shop_tag, url: admin_shop_tags_path, method: :post do |f| %>
  <i class="fas fa-tag"></i> <%= f.label :name, "設備タグ名" %><br />
  <%= f.text_field :name, class: "search-form-group" %>
  <%= f.submit "追加する", class: "btn btn-outline-secondary" %>
<% end %>