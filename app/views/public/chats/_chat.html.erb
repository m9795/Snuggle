<% chats.each do |chat| %>
  <% if chat.user_id == current_user.id %>
    <!--自分のメッセージ（右側）-->
    <div class="my-message mt-1 text-right">
      <!--↓文章折り返し時左揃えにするためのスタイル-->
      <p style="text-align: left;"><%= chat.message %></p>
      <div class="small my-message-time"><%= l chat.created_at %></div> <!--送信日時-->
    </div>
  <% else %>
    <!--相手のメッセージ（左側）-->
    <div class="mt-1">
      <%= link_to user_path(user) do %>
        <%= image_tag user.get_image, class: "user-chat-image" %>
      <% end %>
      <div class="user-message"> <!--相手の吹き出し-->
        <p><%= chat.message %></p> <!--相手のメッセージ-->
      </div>
      <div class="user-message-time small"><%= l chat.created_at %></div> <!--送信日時-->
    </div>
  <% end %>
<% end %>
