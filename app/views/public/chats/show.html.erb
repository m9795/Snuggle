<div class="container">
  <div class="row mb-3 d-flex justify-content-center">
    <div class="col-lg-8">
      <h5 class="text-center">
        <%= link_to user_path(@user), class: "text-secondary" do %>
          <%= image_tag @user.get_image, class: "mt-3 user_image" %><br />
          <%= @user.name %><br />
        <% end %>
          <%= @user.name %> さんとのチャットルーム <i class="far fa-comment"></i>
      </h5>
      <hr></hr>
      <div class="form-group">
        <%= render "public/chats/form", chat: @chat %>
      </div>
      <% if @chats.present? %>
        <div class="message-area">
          <%= render "public/chats/chat", chats: @chats, user: @user %>
        </div>
        <div class="mt-5">
          <%= paginate @chats %>
        </div>
      <% else %>
        <p class="text-center"><%= @user.name %> さんと、チャットをはじめよう！</p>
      <% end %>
    </div>
    <%= render "public/users/mypage.btn", user: @user %>
  </div>
</div>
