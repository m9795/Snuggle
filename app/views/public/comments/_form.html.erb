<div class="border mb-2 px-3 pt-3 pb-2">
  <%= form_with model: [post, comment], local: false do |f| %>
    <div class="form-group">
      <%= f.label :comment, "コメント(最大1000文字)" %>
      <%= f.text_area :comment, autofocus: true, placeholder: 'コメントを入力', class: "js-text form-control", rows: '3', maxlength: "1000" %>
      <div id="form-count">
        <%= render "public/comments/count" %>
      </div>
      <%= f.submit class: 'mt-3 btn btn-outline-dark' %>
    </div>
  <% end %>
</div>

<script>
  document.addEventListener('input',e=>{
    let t=e.target.closest('.form-group textarea');
    if(t){
      t.closest('.form-group').querySelector('div span').textContent=t.value.length;
    }
  });
</script>
