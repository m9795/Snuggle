<div class="border px-3 pt-3 pb-2">
  <%= form_with model: [post, comment], local: false do |f| %>
    <div class="form-group">
      <label>コメント入力文字数(<span></span>)</label><br>
      <%= f.text_area :comment, autofocus: true, placeholder: '1000文字まで入力可能', class: "js-text form-control", rows: '3', maxlength: "1000" %>
      <%= f.submit class: 'mt-3 btn btn-outline-dark' %>
    </div>
  <% end %>
</div>

<script>
document.addEventListener('input',e=>{
  let t=e.target.closest('.form-group textarea');
  if(t){
    t.closest('.form-group').querySelector('label span').textContent=t.value.length;
  }
});
</script>