<h3>To comment</h3>
<%= form_with model: [@post, @comment] do |f| %>
  <%= f.text_area :text %>
  <%= f.submit %>
<% end %>

<% @post.comments.each do |comment| %>
  <%= image_tag comment.user.get_image, class: 'user_image' %>
  <%= comment.user.name %>
  <%= comment.created_at.strftime('%Y/%m/%d') %>
  <%= post.comment %>
<% end %>