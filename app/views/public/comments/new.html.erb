<h3>To comment</h3>
<%= form_with model: [@post, @comment] do |f| %>
  <%= f.label :comment %><br />
  <%= f.text_area :comment %>
  <%= f.submit %>
<% end %>

<% @post.comments.each do |post_comment| %>
  <%= image_tag post_comment.user.get_image, class: 'user_image' %>
  <%= post_comment.user.name %>
  <%= post_comment.created_at.strftime('%Y/%m/%d') %>
  <%= post_comment.comment %>
  <% if post_comment.user == current_user %>
    <%= link_to '削除', post_comment_path(post_comment.post, post_comment), method: :delete %><br />
  <% end %>
<% end %>