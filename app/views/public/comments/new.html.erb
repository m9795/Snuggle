<div class="container">
  <div class="row">
    <div class="col-lg-4 my-3">
      <h4 class="mb-4 text-center"><i class="fas fa-camera fa-xs"></i> 投稿詳細</h4>
      <div class="container border bg-white mb-5 pb-3">
        <%= image_tag @post.user.get_image, class: 'post_user_image' %>
        <%= link_to @post.user.name, user_path(@post.user), class: "text-secondary" %>
        <div class="post_image_wrapper">
          <%= link_to post_path(@post) do %>
            <%= image_tag @post.get_image, class: 'img-fluid post_image' %>
          <% end %>
        </div>
        <h5><%= link_to @post.title, post_path(@post), class: "text-secondary" %></h5>
        <p><%= render_with_tags(@post.content) %></p>
        作成日時　<%= l @post.created_at %><br />
        更新日時　<%= l @post.updated_at %>
      </div>
        <%= render 'public/posts/all-posts.btn' %>
    </div>
    <div class="col-lg-6 offset-lg-1 mt-3 mb-5">
      <h4 class="mb-4 text-center"><i class="far fa-comment-alt fa-xs"></i> みんなのコメント</h4>
      <%= render 'public/comments/form', post: @post, comment: @comment %>
      <div id="comments_area">
        <%= render 'public/comments/post_comments', post_comments: @post_comments %>
      </div>
      <%= render 'public/posts/back.btn' %>
    </div>
  </div>
</div>
