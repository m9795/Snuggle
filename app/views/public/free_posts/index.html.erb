<div class="container">
  <div class="row mb-3 d-flex justify-content-center">
    <div class="col-lg-8">
      <h5 class="text-center"><i class="fas fa-child"></i> フリートークルーム</h5>
      <p class="text-right">
        <%= link_to new_free_post_path do %>
          + 投稿する
        <% end %>
      </p>
      <div class="mx-1 pt-1 bg-white">
        <% if @free_posts.present? %>
          <% @free_posts.each do |free_post| %>
          <div class="row mx-2 mt-3 border-bottom">
            <div class="col-1 mr-3 ml-2">
              <%= image_tag free_post.user.get_image, class: "free_posts_user_image" %>
            </div>
            <div class="col-9 ml-3">
              <p class="mb-0 font-weight-bold small"><%= free_post.user.name %></p>
              <p class="small"><%= free_post.content %></p>
              <div class="mb-3 small text-right"><%= l free_post.created_at %>
                <% if free_post.user == current_user %>
                  <%= link_to '削除', free_post_path(free_post), method: :delete, data: { confirm: '本当に削除しますか？'}, class: "small" %><br />
                <% end %></div>
            </div>
          </div>
          <% end %>
        <% else %>
          <p class="text-center">投稿して、みんなでフリートークしよう！</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
