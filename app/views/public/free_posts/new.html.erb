<div class="container">
  <div class="row m-2 mb-3 d-flex flex-column">
    <h5 class="text-center"><i class="fas fa-comment-dots"></i> フリートーク投稿</h5>
    <div class="row mt-3 d-flec justify-content-center">
      <div class="col-lg-7 form-group">
        <%= form_with model: @free_post, url: free_posts_path, method: :post do |f| %>
          <%= f.text_area :content, rows: 5, autofocus: true,
              maxlength: 200, placeholder: "みんなで気軽に会話しよう！",
              class: "form-control content-input" %>
          <div class="text-secondary text-right">　<span>0</span>/200</div>
          <div class="row d-flex justify-content-end">
            <%= f.submit "投稿する", class: "col-lg-3 m-2 mr-3 btn btn-outline-secondary" %>
          </div>
        <% end %>
        <div class="text-right">
          <span class="content"></span>
        </div>
      </div>
    </div>
  </div>
</div>