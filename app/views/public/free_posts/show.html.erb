<div class="container">
  <div class="row mb-3 d-flex justify-content-center">
    <div class="col-lg-8">
      <h5 class="text-center mb-5"><i class="fas fa-child"></i> 雑談詳細</h5>
      <div class="text-right mb-2">
        <%= link_to new_free_post_path do %>
          + 投稿する
        <% end %>
      </div>
      <div class="mx-1 pt-1 pb-4 border bg-white shadow">
        <div class="row mx-2 mt-3 pt-2 d-flex justify-content-center">
          <div class="col-1 mr-3">
            <%= link_to user_path(@free_post.user), class: "text-secondary" do %>
            <%= image_tag @free_post.user.get_image, class: "free_posts_user_image" %>
          </div>
          <div class="col-9 ml-3">
            <div class="row">
              <p class="col mb-0 font-weight-bold small"><%= @free_post.user.name %></p>
              <% end %>
              <!--通報機能など作成時に利用予定-->
              <!--<span class="col text-right ellipsis-v"><i class="fas fa-ellipsis-v fa-xs"></i></span>-->
            </div>
            <p class="small"><%= @free_post.content %></p>
            <div class="small text-right">
              <%= l @free_post.created_at %><br />
              <% if @free_post.user == current_user %>
                <%= link_to '削除', free_post_path(@free_post), method: :delete, data: { confirm: '本当に削除しますか？'}, class: "small" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div class="row p-4">
        <% if @free_post.images.attached? %>
          <% @free_post.images.each do |image| %>
            <%= link_to image, target: :_blank do %>
              <%= image_tag image, class: "free_post_image mr-3 mt-3 shadow" %>
            <% end %>
          <% end %>
        <% end %>
      </div>
      <%= link_to free_posts_path, class: "my-3 btn btn-outline-dark" do %>
        < 雑談ルームへ
      <% end %>
      <div>
        <!--コメントフォーム作成-->
      </div>
    </div>
  </div>
</div>
