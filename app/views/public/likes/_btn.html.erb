<!--いいねボタン-->
<% if post.liked_by?(current_user) %>
  <%= link_to post_likes_path(post), method: :delete, class: "text-secondary", remote: true do %>
    <i class="fas fa-heart fa-lg" style="color: #dc3545;"></i>
    <%= post.likes.where(user_id: @publish_user_all).count %>
  <% end %>
<% else %>
  <%= link_to post_likes_path(post), method: :post, class: "text-secondary", remote: true do %>
    <i class="fas fa-heart fa-lg" style="color: #c0c0c0"></i>
    <%= post.likes.where(user_id: @publish_user_all).count %>
  <% end %>
<% end %>

<!--コメントボタン-->
<%= link_to new_post_comment_path(post), class: "text-secondary", data: {"turbolinks" => false} do %>
  　<i class="far fa-comment-alt fa-lg"></i>
  <%= post.comments.where(user_id: @publish_user_all).count %><br />
<% end %>
