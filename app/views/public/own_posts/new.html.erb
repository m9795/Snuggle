<div class="container">
  <div class="row m-2 mb-3 d-flex flex-column">
    <h5 class="text-center"><i class="fas fa-comment-dots"></i> ひとりごと</h5>
    <div class="row mt-3 d-flec justify-content-center">
      <div class="col-lg-7 form-group">
        <%= form_with model: @own_post, url: user_own_posts_path(@user), method: :post do |f| %>
          <%= f.text_area :content, rows: 5, autofocus: true, maxlength: 200,  class: "form-control content-input" %>
          <div class="text-secondary text-right">　<span></span></div>
          <div class="row d-flex justify-content-end">
            <%= f.submit "つぶやく", class: "col-lg-3 m-2 mr-3 btn btn-outline-secondary" %>
          </div>
        <% end %>
        <div class="text-right">
          <span class="content"></span>
        </div>
      </div>
    </div>
  </div>
</div>

<!--入力文字数表示用-->
<script>
  // ページ開いた瞬間の文字数を表示
  window.onload = (e) => {
    let content = document.getElementById('own_post_content');
    content.closest('.form-group').querySelector('span').textContent=content.value.length;
  };

  // フォームに入力した際の文字数表示
  document.addEventListener('input',e=>{
    let t=e.target.closest('.content-input');
    if(t){
      t.closest('.form-group').querySelector('span').textContent=t.value.length;
    }
  });
</script>
