<h2>All Posts</h2>
<% posts.each do |post| %>
  <div class="container border mb-3 py-2 ">
    <%= link_to user_path(post.user) do %>
      <%= image_tag post.user.get_image, class: 'post_user_image' %>
      <%= post.user.name %><br />
    <% end %>
    <%= link_to post do %>
      <%= image_tag post.get_image, class: 'post_image' %><br />
    <% end %>
    <!--いいねボタン・コメントアイコン-->
    <div id="likes_btn_<%= post.id %>">
      <%= render 'public/likes/btn', post: post  %>
    </div>
    <% if post.user == current_user %>
      <%= link_to '編集', edit_post_path(post) %>
      ｜ <%= link_to '削除', post_path(post), method: :delete, data: { confirm: '本当に削除しますか？'} %><br />
    <% end %>
    <%= link_to post.title, post_path(post) %><br />
    <p><%= render_with_tags(post.content) %></p>
    <%= l post.created_at %><br />
  </div>
<% end %>