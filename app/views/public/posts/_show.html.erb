<div class="container">
  <div class="row mt-5 mb-1">
    <%= image_tag post.user.get_image, class: 'post_user_image' %>
    <%= link_to post.user.name, user_path(post.user), class: 'd-flex align-items-center' %>
  </div>
  <dev class="row mb-1">
    <%= image_tag post.get_image, class: 'post_image' %>
  </dev>
  <dev class="row">
    <!--いいねボタン・コメントボタン-->
    <div id="likes_btn_<%= post.id %>">
      <%= render 'public/likes/btn', post: post %>
    </div>
  </dev>
  <div class="row">
    <!--投稿した本人のみ編集/削除ボタンの表示-->
    <% if post.user == current_user %>
      <%= link_to '編集', edit_post_path(post) %>
      ｜ <%= link_to '削除', post_path(post), method: :delete, data: { confirm: '本当に削除しますか？'} %><br />
    <% end %>
  </div>
  <div class="row">
    <h5><%= link_to post.title, post_path(post) %></h5>
  </div>
  <div class="row">
    <p><%= render_with_tags(post.content) %></p>
  </div>
  <div class="row mb-5">
    Created　<%= l post.created_at %>｜Updated　<%= l post.updated_at %>
  </div>
</div>

