<h3 class="text-center text-secondary"><i class="fas fa-pen-nib"></i> 投稿メニュー</h3>
<div class="contaier pt-2 px-5 d-flex justify-content-center">
  <div class="col-lg-6">
    <div class="row pt-2 d-flex flex-column">
      <%= link_to new_post_path, class: "text-secondary", data: {"turbolinks" => false} do %>
        <div class="col mt-3 p-5 shadow bg-white">
          <h4 class="text-center">カフェを投稿</h4>
        </div>
      <% end %>
      <%= link_to new_free_post_path, class: "text-secondary" do %>
