<div class="container py-3">
  <div class="row d-flex justify-content-center">
    <div class="col-lg-7">
      <h4 class="text-center mb-5"><i class="far fa-file-alt"></i> 投稿編集</h4>
      <%= render "public/shared/error_messages", resource: @post %>
      <div class="form-group pt-5 pb-4 px-5 border bg-white">
        <%= render 'form', submit: '更新する', post: @post %>
      </div>
      <div class="mt-3 small text-center shop_form_btn"><i class="fas fa-caret-down"></i> お店情報も編集する</div>
      <div class="form-group pt-5 pb-4 px-5 border bg-white shop_form" style="display: none;">
        <%= render 'shop_form', submit: '更新する', post: @post %>
      </div>
      <!--↓リンク先が地図表示のためターボリンクス無効化にした戻るボタン-->
      <%= render "form.back.btn" %>
    </div>
  </div>
</div>

<%= render "public/posts/script/shop_form_script" %>
