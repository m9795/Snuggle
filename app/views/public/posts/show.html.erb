<h2>Post detail</h2>
<%=link_to '< All Posts', posts_path %><br />
<% if @post.user == current_user %>
  <%= link_to '編集', edit_post_path(@post) %>
  ｜ <%= link_to '削除', post_path(@post), method: :delete, data: { confirm: '本当に削除しますか？'} %><br />
<% end %>
<%= image_tag @post.user.get_image, class: 'user_image' %>
<%= link_to @post.user.name, user_path(@post.user) %><br />
<%= image_tag @post.get_image, class: 'show_image' %><br />

  <!--いいねボタン（件数非表示）-->
  <% if @post.liked_by?(current_user) %>
    <%= link_to post_likes_path(@post), method: :delete do %>
      <i class="fas fa-heart fa-lg" aria-hidden="true" style="color: #dc3545;"></i>
      <%#= @post.likes.count %>
    <% end %>
  <% else %>
    <%= link_to post_likes_path(@post), method: :post do %>
      <i class="fas fa-heart fa-lg" aria-hidden="true" style="color: #c0c0c0"></i>
      <%#= @post.likes.count %>
    <% end %>
  <% end %>
  <i class="far fa-comment-alt fa-lg"></i><br />

<h5><%= link_to @post.title, post_path(@post) %></h5>
<%= @post.content %><br />