<div class="container my-3 py-5">
  <%= render "public/shared/error_messages", resource: resource %>
  <div class="row d-flex justify-content-center">
    <div class="col-4 form-group border py-3">
      <h2 class="text-center">Sign up <span><i class="fas fa-address-card fa-xs"></i></span></h2>
      <%= form_with model: resource, url: user_registration_path do |f| %>
        <div class="field mt-2">
          <span><i class="fas fa-user-circle"></i></span> <%= f.label :name %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "ニックネーム", class: "form-control" %>
        </div>

        <div class="field mt-2">
          <span><i class="fas fa-envelope"></i></span> <%= f.label :email %><br />
          <%= f.email_field :email, autocomplete: "email", placeholder: "メールアドレス", class: "form-control" %>
        </div>

        <div class="field mt-2">
          <span><i class="fas fa-lock"></i></span> <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード(6文字以上)", class: "form-control" %>
        </div>

        <div class="field mt-2">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード(確認)", class: "form-control" %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class: "form-control mt-3 btn btn-outline-success" %>
        </div>
      <% end %>
      </div>
  </div>
  <div class="row d-flex justify-content-center text-center">
    <div class="col-4 form-group border py-3">
      <p>Already have an account?</p>
      <%= render "public/shared/links" %>
    </div>
  </div>
</div>