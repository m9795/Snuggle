<div class="container py-3 px-5">
  <div class="row d-flex flex-column align-content-center">
    <div class="col-lg-5 ml-5">
      <%= render "public/shared/error_messages", resource: resource %>
    </div>
    <div class="col-lg-5 mx-3 p-5 form-group border bg-white shadow bg-white">
      <h4 class="text-center"><i class="fas fa-address-card"></i> 新規登録</h4>
      <%= form_with model: resource, url: user_registration_path do |f| %>
        <div class="field mt-4">
          <span><i class="fas fa-user-circle"></i></span> <%= f.label :name %>(20文字以内)<span class="small text-danger"> *必須</span>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "ニックネームを入力", class: "form-control signin-form-text shadow-sm", minilength: "1", maxlength: "20"  %>
        </div>
        <div class="field mt-2">
          <span><i class="fas fa-envelope"></i></span> <%= f.label :email %><span class="small text-danger"> *必須</span>
          <%= f.email_field :email, autocomplete: "email", placeholder: "メールアドレスを入力", class: "form-control signin-form-text shadow-sm" %>
        </div>
        <div class="field mt-2">
          <span><i class="fas fa-lock"></i></span> <%= f.label :password %>(6文字以上)<span class="small text-danger"> *必須</span>
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワードを入力", class: "form-control signin-form-text shadow-sm" %>
        </div>
        <div class="field mt-2">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード(確認用)", class: "form-control signin-form-text shadow-sm" %>
        </div>
        <div class="actions">
          <%= f.submit "新規登録", class: "form-control mt-4 btn btn-outline-success shadow-sm" %>
        </div>
      <% end %>
      </div>
    <div class="col-lg-5 text-center form-group border bg-white shadow mx-3 px-5 pt-3 pb-5">
      <p class="mt-3 text-secondary small">すでにアカウントをお持ちの方</p>
      <%= render "public/shared/links" %>
    </div>
  </div>
</div>