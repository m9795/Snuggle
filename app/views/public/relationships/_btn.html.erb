<% if current_user != user && current_user.following?(user) %>
  <%= link_to "フォロー解除", user_relationships_path(user.id), method: :delete, data: { confirm: "フォローを解除しますか？" }, class: "relationships-btn btn btn-outline-info btn-sm" %>
<% else %>
  <%= link_to "フォローする", user_relationships_path(user.id),method: :post, class: "btn btn-outline-success btn-sm mb-2" %>
<% end %>

<!--相互フォロー時のみチャットボタン表示-->
<% if current_user != user && current_user.following?(user) && user.following?(current_user) %>
  <%= link_to chat_path(user.id), class: "ml-2 chat-btn btn btn-sm btn-outline-secondary" do %>
    <i class="far fa-envelope"></i>
  <% end %>
<% end %>