<div class="form-group-sm form-inline">
  <%= form_with url: search_path, method: :get, local: true, class: "form-group" do |f| %>
    <%= f.search_field :keyword, placeholder: 'キーワードを入力', class: "form-control", size: "15%" %>
    <%= f.submit '検索', class: "btn btn-outline-light" %>
  <% end %>
</div>