<div class="mr-3 form-inline">
  <%= form_with url: search_path, method: :get, local: true do |f| %>
    <%= f.search_field :keyword, placeholder: 'キーワードで投稿を検索', class: "search-form-group search-form-text", size: "22%" %>
    <button type="submit", class="search-btn btn btn-outline-secondary">
      <i class="fas fa-search fa-xs"></i>
    </button>
  <% end %>
</div>
