<div class="form-group-sm mt-2 mr-3 form-inline">
  <%= form_with url: search_path, method: :get, local: true, class: "form-group" do |f| %>
    <%= f.search_field :keyword, placeholder: 'キーワードで投稿を検索', class: "search-form-text form-control", size: "22%" %>
    <%= f.submit '検索', class: "search-btn btn btn-outline-secondary" %>
  <% end %>
</div>