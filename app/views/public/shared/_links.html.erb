<%- if controller_name != 'sessions' %>
  <%= link_to "Login screen", new_session_path(resource_name), class: "form-control mt-3 btn btn-outline-primary" %><br />
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Signup screen", new_registration_path(resource_name), class: "form-control mt-3 btn btn-outline-success" %><br />
<% end %>
