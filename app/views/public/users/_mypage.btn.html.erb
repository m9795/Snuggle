<!--ユーザ情報編集画面のみ下記ボタンを表示-->
<% if current_page?(edit_user_path(user)) %>
  <div class="col-lg-2">
    <%= link_to '< マイページ', user_path(user), class: "form-control mt-2 btn btn-outline-dark" %>
  </div>
  <div class="col-lg-2">
    <%= link_to '退会する >', user_unsubscribe_path, class: "form-control mt-2 btn btn-outline-danger" %>
  </div>
<% else %>

<!--現在のページが「ひとりごと」「ユーザ詳細情報」「チャット」なら
    ボタンサイズcol-lg-5
    それ以外はcol-lg-7 mb-3 d-md-noneにしている-->
<% if current_page?(user_own_posts_path(user)) %>
  <div class="col-lg-5">
<% elsif current_page?(user_detail_path(user)) %>
  <div class="col-lg-5">
<% elsif current_page?(chat_path(user)) %>
  <div class="col-lg-5">
<%else %>
  <div class="col-lg-7 mb-3 d-md-none">
<% end %>
  <% unless current_page?(user_path(user)) %>
    <%= link_to  user_path(user), class: "form-control mt-2 btn btn-outline-dark" do %>
      <% if user == current_user %>
        < マイページ
      <% else %>
        < <%= user.name %>さんのページへ
      <% end  %>
    <% end %>
  <% end %>
<% end %>

<!--現在のページがチャットならマイページへを表示-->
<% if current_page?(chat_path(user)) %>
  <%= link_to  user_path(current_user), class: "form-control mt-2 btn btn-outline-dark" do %>
      < マイページへ
  <% end %>
<% end %>
</div>
