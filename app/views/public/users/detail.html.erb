<div class="container">
  <div class="row mb-3 d-flex justify-content-center">
    <div class="col-lg-8 mb-4">
      <h5 class="text-center">
        <%= link_to @user.image, target: :_blank do %>
          <%= image_tag @user.get_image, class: "mb-3 user_image" %><br />
        <% end %>
        <% if @user == current_user %>
          <i class="fas fa-book-open"></i> 自分のこと
          <%= link_to edit_user_path(@user), data: {"turbolinks" => false}, class: "ml-2" do %>
            <i class="fas fa-edit fa-xs"></i>
          <% end %>
        <% else %>
          <i class="fas fa-book-open"></i> <%= @user.name %> さんの詳細
        <% end %>
      </h5>
      <p class="text-right small mr-3">登録日時：<%= l @user.created_at %></p>
      <div class="my-3 p-lg-5 p-3 customize-border shadow bg-white">
        <div class="col">
          <p class="font-weight-bold border-bottom"><i class="fas fa-user-alt"></i> 名前（ニックネーム）</p>
          <p><%= @user.name %></p>
        </div>

       <div class="col mt-5">
          <p class="font-weight-bold border-bottom "><i class="far fa-file-alt"></i> 自己紹介</p>
          <!--新規登録時nilになるので、nilの場合もレイアウト崩れないように - を表示-->
          <% if @user.introduction == "" || @user.introduction == nil %>
            <p>-</p>
          <% else %>
            <p><%= @user.introduction %></p>
          <% end %>
        </div>

        <div class="col mt-5">
          <p class="font-weight-bold border-bottom"><i class="fas fa-graduation-cap"></i> 学習内容</p>
          <% if @user.study_content == "" || @user.study_content == nil %>
            <p>-</p>
          <% else %>
            <p><%= @user.study_content %></p>
          <% end %>
        </div>

        <div class="col mt-5">
          <p class="font-weight-bold border-bottom"><i class="fas fa-flag"></i> 目標</p>
          <% if @user.target == "" || @user.target == nil %>
            <p>-</p>
          <% else %>
            <p><%= @user.target %></p>
          <% end %>
        </div>

        <div class="col mt-5">
          <p class="font-weight-bold border-bottom"><i class="fas fa-clock"></i> 学習時間</p>
          <% if @user.studying_time == "" || @user.studying_time == nil %>
            <p>-</p>
          <% else %>
            <p><%= @user.studying_time %></p>
          <% end %>
        </div>

        <div class="col mt-5">
          <p class="font-weight-bold border-bottom"><i class="fas fa-moon"></i> 睡眠時間</p>
          <% if @user.sleeping_time == "" || @user.sleeping_time == nil %>
            <p>-</p>
          <% else %>
            <p><%= @user.sleeping_time %></p>
          <% end %>
        </div>

        <div class="col mt-5">
          <p class="font-weight-bold border-bottom"><i class="fab fa-pagelines"></i> リラックス方法</p>
          <% if @user.relax == "" || @user.relax == nil %>
            <p>-</p>
          <% else %>
            <p><%= @user.relax %></p>
          <% end %>
        </div>

        <div class="col mt-5">
          <p class="font-weight-bold border-bottom"><i class="fas fa-power-off"></i> 気合を入れる方法</p>
          <% if @user.fighting == "" || @user.fighting == nil %>
            <p>-</p>
          <% else %>
            <p><%= @user.fighting %></p>
          <% end %>
        </div>

        <div class="col mt-5">
          <p class="font-weight-bold border-bottom"><i class="fas fa-palette"></i> 好きな色</p>
          <% if @user.favorite_color == "" || @user.favorite_color == nil %>
            <p>-</p>
          <% else %>
            <p><%= @user.favorite_color %></p>
          <% end %>
        </div>

        <div class="col mt-5">
          <p class="font-weight-bold border-bottom"><i class="fas fa-coffee"></i> 好きなカフェ</p>
          <% if @user.favorite_cafe == "" || @user.favorite_cafe == nil %>
            <p>-</p>
          <% else %>
            <p><%= @user.favorite_cafe %></p>
          <% end %>
        </div>

        <div class="col mt-5">
          <p class="font-weight-bold border-bottom"><i class="fas fa-cocktail"></i> 好きな飲み物</p>
          <% if @user.favorite_drink == "" || @user.favorite_drink == nil %>
            <p>-</p>
          <% else %>
            <p><%= @user.favorite_drink %></p>
          <% end %>
        </div>

        <div class="col mt-5">
          <p class="font-weight-bold border-bottom"><i class="fas fa-hamburger"></i> 好きな食べ物</p>
          <% if @user.favorite_food == "" || @user.favorite_food == nil %>
            <p>-</p>
          <% else %>
            <p><%= @user.favorite_food %></p>
          <% end %>
        </div>
      </div>
    </div>
      <%= render "public/users/mypage.btn", user: @user %>
  </div>
</div>
