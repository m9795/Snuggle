<div class="container">
  <div class="row">
    <div class="col-md-4 mb-3 d-none d-md-block">
      <%= render 'public/users/info', user: current_user, liked_post: @liked_post, posts: @posts %>
    </div>
    <div class="col-md-6 offset-md-1">
      <h4 class="mb-4 text-center"><span><i class="far fa-images fa-xs"></i></span> フォローユーザーの投稿 (<%= @following_posts.count %>件)</h4>
      <% if @following_posts.present? %>
        <%= render 'public/posts/index', posts: @following_posts, page_posts: @page_posts %>
      <% else %>
        <p class="text-center">現在、投稿はありません。</p>
      <% end %>
      <%= render 'public/users/mypage.btn', user: current_user %>
    </div>
  </div>
</div>